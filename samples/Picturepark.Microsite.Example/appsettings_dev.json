{
	"Logging": {
		"IncludeScopes": false,
		"LogLevel": {
			"Default": "Debug",
			"System": "Information",
			"Microsoft": "Information"
		}
	},
	"Serilog": {
		"Properties": {
			"Application": "Microsite"
		},
		"WriteTo": [
			{
				"Name": "Elasticsearch",
				"Args": {
					"nodeUris": "http://localhost:9200",
					"indexFormat": "microsite-{0:yyyy.MM}",
					"typeName": "log",
					"batchPostingLimit": 50,
					"period": 2000,
					"inlineFields": true,
					"restrictedToMinimumLevel": "Warning",
					"bufferBaseFilename": "log/buffer",
					"bufferFileSizeLimitBytes": 5242880,
					"bufferLogShippingInterval": 2000
				}
			}
		]
	},
	"Picturepark": {
		"BaseUrl": "",
		"AccessToken": "",
		"CustomerAlias": ""
	},
	"Authentication": {
		"Authority": "",
		"ClientId": "",
		"ClientSecret": "",
		"CustomerId": "",
		"CustomerAlias": "",
		"Scopes": [ "openid", "profile", "offline_access", "picturepark_api", "content_read" ]
	}
}